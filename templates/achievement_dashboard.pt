<div metal:use-macro="layout">
    <style type="text/css" media="screen" metal:fill-slot="css">
        .showcase
        {
            border: 0px solid #AAA;
            text-align:center;
            padding: 0px 0 10px;
        }
        
        .showcase_icon
        {
            display: inline-block;
            width: 150px;
            height: 150px;
            border: 1px solid #CCC;
            margin: 0 20px;
        }
    </style>
    
    <div metal:fill-slot="header_buttons" style="display:inline-block;">
        
    </div>
    
    <div metal:fill-slot="content">
        <div class="error">
            This is still a work in progress. As with Wordy I am writing this my free time. If you have any suggestions then please let me know.
        </div>
        
        <div class="showcase">
            <h3>Showcase</h3>
            
            <div class="showcase_icon">
                1
            </div>
            <div class="showcase_icon">
                2
            </div>
            <div class="showcase_icon">
                3
            </div>
            <div class="showcase_icon">
                4
            </div>
            <div class="showcase_icon">
                4
            </div>
        </div>
        
        
        <div style="float:right; width:49%;">
            <h4>Incomplete</h4>
            <div style="" tal:repeat="a pending">
                ${achievement_types[a.item].name}
            </div>
        </div>
        
        <div style="float:left; width:49%;">
            <h4>Completed</h4>
            <div style="" tal:repeat="a completed">
                ${achievement_types[a.item].name}
            </div>
        </div>
        
        <div style="clear:both;">
            &nbsp;
        </div>
    </div>
</div>